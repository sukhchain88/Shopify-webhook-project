# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=development

# ================================
# SHOPIFY CONFIGURATION
# ================================
# Your Shopify store URL (e.g., mystore.myshopify.com)
SHOPIFY_STORE_URL=your-store.myshopify.com

# Shopify Admin API Access Token
# Get this from: Admin > Apps > Develop apps > [Your App] > API credentials
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Shopify Webhook Secret Key
# Get this from: Admin > Settings > Notifications > Webhooks
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_key

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopify_webhook_db
DB_USER=postgres
DB_PASSWORD=your_password

# Alternative: Database URL (for managed databases)
# DATABASE_URL=postgresql://username:password@hostname:5432/database

# ================================
# REDIS CONFIGURATION (for BullMQ)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Alternative: Redis URL
# REDIS_URL=redis://localhost:6379

# ================================
# WEBHOOK CONFIGURATION
# ================================
# Base URL for your webhook endpoints (production URL)
WEBHOOK_BASE_URL=https://your-app.render.com

# Webhook verification settings
WEBHOOK_VERIFY_SIGNATURE=true

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourstore.com

# SendGrid (Alternative)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# SECURITY CONFIGURATION
# ================================
# JWT Secret for authentication (if implemented)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ================================
# LOGGING CONFIGURATION
# ================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ================================
# MONITORING & ANALYTICS (Optional)
# ================================
# Application monitoring
NEW_RELIC_LICENSE_KEY=
SENTRY_DSN=

# ================================
# FEATURE FLAGS (Optional)
# ================================
# Enable/disable features
ENABLE_BACKGROUND_JOBS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_RETRY=true

# ================================
# DEVELOPMENT ONLY
# ================================
# Database seeding and debugging
ENABLE_DB_LOGGING=false
ENABLE_DB_SYNC=false
SEED_DATABASE=false 